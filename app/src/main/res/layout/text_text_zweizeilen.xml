<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dp">

    <TextView
        android:id="@+id/textzeile1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textzeile2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textzeile1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textzeile5"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textzeile2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textzeile6"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textzeile5"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textzeile5"
        android:text="TextView"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textzeile7"
        android:layout_width="@android:dimen/app_icon_size"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textzeile2"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textzeile6"
        android:text="TextView"
        android:textSize="14sp" />


</RelativeLayout>