<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dp">

    <TextView
        android:id="@+id/textzeile1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textzeile2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textzeile1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textzeile2"
        android:layout_centerVertical="false"
        android:layout_toStartOf="@+id/textView6"
        android:text="@string/woche"
        android:textAlignment="center"
        android:textSize="12sp"
        tools:elevation="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textzeile2"
        android:layout_toStartOf="@+id/textView7"
        android:text="@string/monat"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textzeile2"
        android:layout_alignEnd="@+id/textzeile1"
        android:text="@string/jahr"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView5"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView5"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textzeile1"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="24sp" />

</RelativeLayout>